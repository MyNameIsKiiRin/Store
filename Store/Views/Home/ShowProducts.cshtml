@model IEnumerable<Store.Models.EF.SanPham>

@{
    ViewBag.Title = "ShowProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (@ViewData["MaLoaiNSX"] == null)
    {
        foreach (var item in Model.GroupBy(x => x.LoaiSanPham).Take(1))
        {
            foreach (var item1 in Model.GroupBy(x => x.NhaSanXuat).Take(1))
            {
                <div style="border-bottom:2px solid orange">
                    <h3 class="text-center my-3 p-1" style="color:white;background:orange;width:fit-content;border-radius:9px">@item.Key.TenLoaiSP / @item1.Key.TenNSX</h3>
                    <input type="checkbox" name="price" />
                    <label for="price">All</label>
                    <input type="checkbox" name="price" />
                    <label for="price">1.000.000 - 2.000.000đ</label>
                    <input type="checkbox" name="price" />
                    <label for="price">2.000.000 - 3.000.000đ</label>
                </div>
            }
        }
    }
    else
    {
        foreach (var item in Model.GroupBy(x => x.LoaiSanPham).Take(1))
        {
            <div style="border-bottom:2px solid orange">
                <h3 class="text-center my-3 p-1" style="color:white;background:orange;width:fit-content;border-radius:9px">@item.Key.TenLoaiSP</h3>
                <div style="display: flex; justify-content: space-around; width: 40%; margin-bottom: 10px">
                    <div class="" style="display:flex;align-items:center;width:10%;justify-content:space-around">
                        <input type="checkbox" name="price" />
                        <label style="font-size: 14px; margin: 0" for="price">All</label>
                    </div>
                    <div class="" style="display:flex;align-items:center;width:35%;justify-content:space-around">
                        <input type="checkbox" name="price" />
                        <label style="font-size: 14px; margin: 0" for="price">1.000.000 - 2.000.000đ</label>
                    </div>
                    <div class="" style="display:flex;align-items:center;width:35%;justify-content:space-around">
                        <input type="checkbox" name="price" />
                        <label style="font-size: 14px;margin:0" for="price">2.000.000 - 3.000.000đ</label>
                    </div>
                </div>
            </div>
        }
    }

}


<div class="content-bottom">
    <div class=" row">
        @foreach (var item in Model)
        {
            <div class=" col-md-3 ">
                <a href=@Url.Action("Index","Products",new {id=item.MaSP })>
                    <div class="view view-fifth">
                        <div class="top_box">
                            <h3 class="m_1 text-center">@item.TenSP</h3>
                            <div class="grid_img">
                                <div class="css3 img-fluid"><img src=@Url.Content("~/assets/Client/Product_Images/"+item.HinhAnh1) alt="" /></div>
                                <div class="mask">
                                    <a class="info" href=@Url.Action("Index","Products",new {id=item.MaSP })>Chi Tiết</a>
                                </div>
                            </div>
                            <div class="price">@item.DonGia.Value.ToString("#,##") đ</div>
                        </div>
                    </div>
                    <ul class="list" style="background:red">
                        <li>
                            <img src="images/plus.png" alt="" />
                            <ul class="icon1 sub-icon1 profile_img">
                            </ul>
                        </li>
                    </ul>
                </a>
            </div>
        }
    </div>

</div>

